@model Investments.Models.ToDoList;

@{
    ViewData["Title"] = "To Do List";
}

<div class="text-center">

    <h1 class="display-4">To Do List</h1>

    <!-- Add To Do Button -->
    <form asp-controller="ToDoList" asp-action="AddItemView">
        <input class="btn btn-info"
               type="submit" value="Add Assignment" />
        <br /> <br />
    </form>

    <!-- Display To Do List if List is not Empty -->
    @if(Model.ListOfAssignments.Count > 0) {
        @foreach(ToDo assignment in Model.ListOfAssignments)
        {
            <div class="card">
                <div class="card-header">
                    Jose's To Do List
                </div>
                <div class="card-body">
                    <!-- Assignment Info -->
                    <h5 class="card-title">@assignment.Assignment</h5>
                    <p class="card-text">@assignment.DateTime.ToString("D")</p>

                    <!-- Edit Assignment -->
                    <a asp-controller="ToDoList" asp-action="EditAssignmentView"
                       asp-route-id="@assignment.ID" class="btn btn-warning">Edit</a>

                    <!-- Delete Assignment -->
                    <a asp-controller="ToDoList" asp-action="DeleteAssignment"
                       asp-route-id="@assignment.ID" class="btn btn-danger">Delete</a>
                </div>
            </div>
            <br />
        }
    }

</div>
